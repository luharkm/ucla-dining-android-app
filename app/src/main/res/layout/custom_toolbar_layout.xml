<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_toolbar_height"
    android:background="@color/ucla_light_blue"
    android:id="@+id/custom_toolbar"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    style="@style/ThemeOverlay.AppCompat.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/custom_toolbar_button_back"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:background="@null"
            android:adjustViewBounds="false"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UCLA Dining"
            android:id="@+id/custom_toolbar_title"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:typeface="serif" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/custom_toolbar_button_refresh"
            android:src="@drawable/ic_refresh_white_24dp"
            android:background="@null"
            android:layout_gravity="center_vertical"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:scaleType="center"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>

</android.support.v7.widget.Toolbar>