<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:color">#92BAD2</item>

        <item name="android:typeface">normal</item>

        <!--<item name="android:statusBarColor">@color/toolbar_custom_color</item>-->

        <item name="colorPrimary">@color/ucla_light_blue</item>
        <item name="colorPrimaryDark">@color/ucla_dark_blue</item>
        <item name="colorAccent">@color/ucla_gold</item>
    </style>


    <style name="DefaultCardView" parent="CardView">
        <!--<item name="xmlns:card_view">http://schemas.android.com/apk/res-auto</item>-->
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/ucla_light_blue</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
